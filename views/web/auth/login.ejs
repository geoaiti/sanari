<%- contentFor('headForm') %>
<h4 class="font-18 m-b-5 text-center">Welcome Back !</h4>
<p class="text-muted text-center">Sign in to continue to <%= app_name %>.</p>

<% if(auth) { %>
    <div class="alert alert-danger">
        <%= auth %>
    </div>
<% } %>

<%- contentFor('formulir') %>
<div class="form-group">
    <label for="username">Username</label>
    <input name="username" value="<%= username %>" type="text" class="form-control" id="username" placeholder="Enter username or Email" autofocus required>
</div>

<div class="form-group">
    <label for="userpassword">Password</label>
    <input type="password" class="form-control" id="userpassword" name="password" placeholder="Enter password" required>
</div>

<div class="form-group row m-t-20">
    <div class="col-sm-6">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="customControlInline">
            <label class="custom-control-label" for="customControlInline">Remember me</label>
        </div>
    </div>
    <div class="col-sm-6 text-right">
        <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Log In</button>
    </div>
</div>

